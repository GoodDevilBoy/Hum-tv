      <script>
          function formatAMPM(date) {
              let hours = date.getHours();
              let minutes = date.getMinutes();
              let seconds = date.getSeconds();
              let ampm = hours >= 12 ? 'PM' : 'AM';
              hours = hours % 12;
              hours = hours ? hours : 12; // 0 should be 12
              minutes = minutes < 10 ? '0' + minutes : minutes;
              seconds = seconds < 10 ? '0' + seconds : seconds;
              let strTime = hours + ':' + minutes + ':' + seconds + ' ' + ampm;
              return strTime;
          }

          function updateTime() {
              const pakistanTime = new Date().toLocaleString("en-US", { timeZone: "Asia/Karachi" });
              const indiaTime = new Date().toLocaleString("en-US", { timeZone: "Asia/Kolkata" });

              document.getElementById("pakistan-time").innerHTML = formatAMPM(new Date(pakistanTime));
              document.getElementById("india-time").innerHTML = formatAMPM(new Date(indiaTime));
          }

          setInterval(updateTime, 1000); // Update every second
          updateTime(); // Initial call to populate current time immediately
      </script>

